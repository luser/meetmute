{
    "manifest_version": 2,

    "name": "Meetmute",
    "description": "This extension provides keyboard shortcuts to toggle your microphone and camera in Google Meet and Hangouts",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "commands": {
        "toggleMic": {
            "suggested_key": {
                "default": "Ctrl+Shift+7"
            },
            "global": true,
            "description": "Toggle Microphone in Meet/Hangouts"
        },
        "toggleCam": {
            "suggested_key": {
                "default": "Ctrl+Shift+8"
            },
            "global": true,
            "description": "Toggle Webcam in Meet/Hangouts"
        }
    },

    "permissions": [
        "activeTab",
        "tabs",
        "https://hangouts.google.com/",
        "https://meet.google.com/"
    ]
}
